// radial_menu.dart
import 'package:flutter/material.dart';
import 'dart:math' as math;

class RadialMenu extends StatelessWidget {
  final List<Map<String, dynamic>> categories;
  final List<Color> colors;
  final double radius;

  const RadialMenu({
    Key? key,
    required this.categories,
    required this.colors,
    this.radius = 120,
  }) : super(key: key);

  @override
  Widget build(BuildContext context) {
    return Center(
      child: SizedBox(
        width: radius * 2.5,
        height: radius * 2.5,
        child: Stack(
          children: List.generate(categories.length, (idx) {
            final angle = 2 * math.pi * idx / categories.length;
            final item = categories[idx];
            return Positioned(
              left: radius + radius * math.cos(angle) - 25,
              top: radius + radius * math.sin(angle) - 25,
              child: GestureDetector(
                onTap: () {
                  final builder = item['builder'] as Widget Function();
                  Navigator.push(
                    context,
                    PageRouteBuilder(
                      transitionDuration: const Duration(milliseconds: 500),
                      transitionsBuilder: (context, animation, secondaryAnimation, child) {
                        return FadeTransition(
                          opacity: animation,
                          child: child,
                        );
                      },
                      pageBuilder: (context, animation, secondaryAnimation) {
                        return builder();
                      },
                    ),
                  );
                },
                child: Container(
                  width: 50,
                  height: 50,
                  decoration: BoxDecoration(
                    color: colors[idx % colors.length].withOpacity(0.7),
                    shape: BoxShape.circle,
                    boxShadow: [
                      BoxShadow(
                        color: Colors.black.withOpacity(0.2),
                        blurRadius: 4,
                        offset: const Offset(0, 2),
                      ),
                    ],
                  ),
                  child: Center(
                    child: Tooltip(
                      message: item['name']!,
                      child: Text(
                        item['name']!.substring(0, 3),
                        style: const TextStyle(
                          color: Colors.white,
                          fontWeight: FontWeight.bold,
                        ),
                      ),
                    ),
                  ),
                ),
              ),
            );
          }),
        ),
      ),
    );
  }
}
